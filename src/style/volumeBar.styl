.video-player {

    .volume-panel {

        background-image: linear-gradient(to #303030, #212121);
        box-shadow: inset 0 1px 0px rgba(255,255,255,0.1);
        border-radius: 2px;
        box-sizing: border-box;

        position: absolute;
        bottom: 48px;
        left: 10px;
        z-index: 1;

        display: none;
        width: 28px;
        height: 99px;

        padding: 9px 11px;

    }

    .volume-bar {
        background-color: #1A1A1A;
        border-radius: 2px;
        height: 100%;
    }

    .volume-progress,
    .volume-handle {
        position: absolute;
        left: 0;
    }

    .volume-progress {
        background-color: #FF7F00;
        width: 100%;
        height: 100%;
        border-radius: 2px;
        bottom: 0;
    }

    .volume-handle {
        $size = 12px;

        border: 3px solid #FFF;
        box-sizing: border-box;
        box-shadow: 0px 0px 4px rgba(0,0,0,0.8);

        background-color: #FFF;
        cursor: pointer;

        width: $size;
        height: $size;
        border-radius: 50%;
        margin-left: -3px;

        bottom: 69px;

        &:hover {
            background-color: #FF7F00;
        }
    }
}