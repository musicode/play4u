.video-player {
    .quality-control {

        cursor: pointer;
        padding: 12px 10px;
        position: relative;

        ul {
            background-image: linear-gradient(to #303030, #212121);
            box-shadow: inset 0 1px 0px rgba(255,255,255,0.1);
            border-radius: 2px;
            color: #6D6D6D;
            display: none;

            position: absolute;
            bottom: 48px;
            left: 5px;
            z-index: 1;

            list-style: none;
            margin: 0;
            padding: 0 7px;
        }

        li {
            padding: 9px 7px;
            border-top: 1px solid #363636;

            &:first-child {
                border-top: none;
            }
            &:hover {
                color: #FFF;
            }
            &.active {
                color: #FF7F00;
                cursor: default;
            }
        }

        &:hover {
            .current-quality {
                border-color: #FF7F00;
                color: #FF7F00;
            }
        }
    }

    .current-quality {
        border: 1px solid #9D9D9D;
        color: #9D9D9D;
        display: inline-block;
        padding: 4px 8px;
        border-radius: 2px;
    }
}