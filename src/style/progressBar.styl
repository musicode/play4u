
.video-player {

    .progress-panel {
        position: absolute;
        top: rem(-10);
        left: 0;
        width: 100%;
        padding: rem(10) 0;
    }

    .progress-bar {
        border-bottom: 1px solid #242424;
        background-image: linear-gradient(to #4E4E4E, #585858);
        width: 100%;
        height: 6px;
        box-shadow: 0 1px 0 #434343, inset 0 1px 4px rgba(0,0,0,0.3);
        position: relative;
    }
    .load-progress {
        background-color: rgba(0,0,0,0.2);
    }

    .play-progress {
        background-color: #FF7F00;
    }

    .seek-handle {

        $size = 12px;

        border: 3px solid #FFF;
        box-sizing: border-box;
        background-color: #FFF;
        cursor: pointer;
        width: $size;
        height: $size;
        border-radius: 50%;
        margin-top: -3px;

        box-shadow: 0px 0px 4px rgba(0,0,0,0.8);

        &:hover {
            background-color: #FF7F00;
        }
    }
}