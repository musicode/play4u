
@import "layout.styl";
@import "./style/video.styl";
@import "./style/controlBar.styl";
@import "./style/progressBar.styl";
@import "./style/buttonControl.styl";
@import "./style/timeControl.styl";
@import "./style/titleControl.styl";
@import "./style/qualityControl.styl";
@import "./style/muteControl.styl";
@import "./style/volumeBar.styl";
@import "./style/fullscreenControl.styl";
@import "./style/logoControl.styl";
@import "./style/loadSpinner.styl";

$control-bar-height = 54px;

.video-player {

    position: relative;
    font-size: 13px;

    width: 100%;
    height: 416px;
    padding-bottom: $control-bar-height;

    .control-bar {
        position: absolute;
        bottom: 0;
        left: 0;
        right: 0;
    }

    .quality-control,
    .mute-control,
    .fullscreen-control,
    .logo-control {
        float: right;
    }

    &.fullscreen {
        position: fixed;
        top: 0;
        left: 0;
        bottom: 0;
        right: 0;
        width: auto;
        height: auto;
    }

}

+below(600px) {

    .logo-control {
        display: none;
    }

    .title-control {
        display: none;
    }
}