/**
 * @file 基础布局，layout + theme 组成完整样式
 * @author musicode
 */

.video-player {

    background-color: #000;
    display: inline-block;
    position: relative;
    overflow: hidden;

    .load-progress,
    .play-progress {
        position: absolute;
        top: 0;
        right: 0;
        bottom: 0;
        left: 0;
        width: 0;
    }

    .seek-handle {
        position: absolute;
        left: 0;
        top: 0;
    }

    .volume-bar {
        position: relative;
    }

    .volume-handle {
        position: absolute;
    }

    .play-icon,
    .pause-icon,
    .volume-up-icon,
    .volume-off-icon,
    .expand-icon,
    .compress-icon,
    .logo-icon {
        background-image: url(player.png);
        display: inline-block;
        width: 20px;
        height: 22px;

        background-image: -webkit-image-set(
            url(player.png) 1x,
            url(player@2x.png) 2x
        );
    }

}